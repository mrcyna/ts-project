{
  "name": "ts-project",
  "version": "1.0.0",
  "description": "A simple, pre-configured TS project to enjoy coding!",
  "bin": "./bin/cli.js",
  "main": "src/app.ts",
  "scripts": {
    "start": "npm run build && node build/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "build:dry-run": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "postinstall": "npx husky install"
  },
  "author": "Sina Ahmadpour",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3"
  },
  "volta": {
    "node": "18.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
